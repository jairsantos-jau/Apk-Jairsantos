<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"

    tools:context=".Certificados">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        app:cardPreventCornerOverlap="true"
        android:id="@+id/card_01"
        android:layout_width="399dp"
        android:layout_height="200dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        >

        <ImageView
            android:id="@+id/id_usp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/usp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="59dp"
            android:layout_gravity="left|top"
            android:src="@drawable/conquistas" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:text="Data Science"
            android:textSize="35sp"
            android:textStyle="bold" />


    </androidx.cardview.widget.CardView>
    <!--carde 02-->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_principal2"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:layout_margin="5dp"
        android:background="#005555"
        app:cardUseCompatPadding="true"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp"
        >
        <ImageView
            android:id="@+id/recodepro"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/recodepro"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="59dp"
            android:layout_gravity="left|top"
            android:src="@drawable/conquistas" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:text="Dev Full Stack"
            android:textSize="35sp"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"/>


    </androidx.cardview.widget.CardView>
    <!--cards 3 e 4-->
    <!--carde 02-->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_principal3"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:layout_margin="5dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp"
        >
        <ImageView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/senai"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="59dp"
            android:layout_gravity="left|top"
            android:src="@drawable/conquistas" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:text="Python Data Science"
            android:textSize="35sp"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"/>

    </androidx.cardview.widget.CardView>

    <!--card 5 e 6-->
    <!--carde 02-->
    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_principal4"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:layout_margin="5dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="4dp"
        card_view:cardCornerRadius="15dp"
        >
        <ImageView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/institutofederal"
            />
        <ImageView
            android:id="@+id/id_img_ufs"
            android:layout_width="wrap_content"
            android:layout_height="59dp"
            android:layout_gravity="left|top"
            android:src="@drawable/conquistas" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:text="Programador Web"
            android:textSize="35sp"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"/>


    </androidx.cardview.widget.CardView>
</LinearLayout>
</ScrollView>